<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    tools:context=".Labtest"
    android:orientation="vertical"
    >

    <include layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp"
            style="@style/Widget.Material3.CardView.Outlined"
            app:strokeColor="@color/red"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="gotoAppoinmentasBG"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:onClick="gotoAppoinmentasBG"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_labtest"
                    android:padding="20dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Blood Group"
                    android:onClick="gotoAppoinmentasBG"
                    android:gravity="center"
                    android:textSize="30dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="gotoAppoinmentasBG"
                    android:src="@drawable/ic_rightarrow"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="20dp"/>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp"
            style="@style/Widget.Material3.CardView.Outlined"
            app:strokeColor="@color/red"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:onClick="gotoAppoinmentasET"
                android:weightSum="3">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:onClick="gotoAppoinmentasET"
                    android:src="@drawable/esrtest"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ESR Test"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:onClick="gotoAppoinmentasET"
                    android:gravity="center"
                    android:textSize="30dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="gotoAppoinmentasET"
                    android:src="@drawable/ic_rightarrow"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="20dp"/>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp"
            style="@style/Widget.Material3.CardView.Outlined"
            app:strokeColor="@color/red"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="gotoAppoinmentasBS"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_bloodsugar"
                    android:padding="20dp"
                    android:onClick="gotoAppoinmentasBS"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Blood Sugar"
                    android:onClick="gotoAppoinmentasBS"
                    android:gravity="center"
                    android:textSize="30dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="gotoAppoinmentasBS"
                    android:src="@drawable/ic_rightarrow"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="20dp"/>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp"
            style="@style/Widget.Material3.CardView.Outlined"
            app:strokeColor="@color/red"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="gotoAppoinmentasHT"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_hiv_test"
                    android:onClick="gotoAppoinmentasHT"
                    android:padding="20dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="HIV Test"
                    android:onClick="gotoAppoinmentasHT"
                    android:gravity="center"
                    android:textSize="30dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="gotoAppoinmentasHT"
                    android:src="@drawable/ic_rightarrow"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="20dp"/>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>