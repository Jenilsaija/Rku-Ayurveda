<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="25"
    tools:context=".select_doctor">

    <include layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/doctor1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        style="@style/Widget.Material3.CardView.Outlined"
        app:strokeColor="@color/red"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/doctor1name"
                android:layout_height="wrap_content"
                android:text="Dipa Shivaji Rananavare"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M.D.Samhita &amp; Siddhanta"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="18dp"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/doctor2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            style="@style/Widget.Material3.CardView.Outlined"
            app:strokeColor="@color/red"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bhavin Shashikant Duba"
                    android:id="@+id/doctor2name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="18dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M.D. Kriya Sharir"
                    android:textSize="15sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="18dp"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/doctor3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            style="@style/Widget.Material3.CardView.Outlined"
            app:strokeColor="@color/red"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meera Brijesh Sapariya"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/doctor3name"
                    android:layout_marginStart="18dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M.D. Kayachikitsa"
                    android:textSize="15sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="18dp"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/doctor4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"

            style="@style/Widget.Material3.CardView.Outlined"
            app:strokeColor="@color/red"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rajendra Anandrao Jadhav"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/doctor4name"
                    android:layout_marginStart="18dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M.S. Shalya Tantra"
                    android:textSize="15sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="18dp"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>